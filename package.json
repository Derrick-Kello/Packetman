{
    "name": "packetman",
    "version": "1.0.0",
    "description": "HTTP API Testing Client - A desktop application for testing API endpoints",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "keywords": [
        "api",
        "testing",
        "http",
        "rest",
        "client",
        "postman",
        "electron"
    ],
    "author": {
        "name": "Hostelhubb Developer Team",
        "email": "hostelhubbofficial@gmail.com"
      },
    "license": "MIT",
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.6.4",
        "electron-icon-builder": "^2.0.1"
    },
    "build": {
        "appId": "com.packetman.client",
        "productName": "PacketMan",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "index.html",
            "splash.html",
            "renderer.js",
            "package.json"
        ],
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "icon.icns",
            "category": "public.app-category.developer-tools"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "icon.png",
            "category": "Development"
        }
    }
}
